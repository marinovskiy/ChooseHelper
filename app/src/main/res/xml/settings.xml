    <!--android:dialogTitle="Choose language of application"-->
    <!--android:entries="@array/languages"-->
    <!--android:entryValues="@array/languages"-->
    <!--android:key="@string/settings_language"-->
    <!--android:summary="%s"-->
    <!--android:title="Language" />-->

    <PreferenceCategory android:title="Notifications">

        <ListPreference
            android:defaultValue="On"
            android:dialogTitle="Set state notification"
            android:entries="@array/notifications"
            android:entryValues="@array/notifications_code"
            android:key="@string/settings_notifications_liked"
            android:summary="%s"
            android:title="Someone liked my compare" />

        <ListPreference
            android:defaultValue="On"
            android:dialogTitle="Set state notification"
            android:entries="@array/notifications"
            android:entryValues="@array/notifications_code"
            android:key="@string/settings_notifications_commented"
            android:summary="%s"
            android:title="Someone add a comment to my compare" />

        <ListPreference
            android:defaultValue="On"
            android:dialogTitle="Set state notification"
            android:entries="@array/notifications"
            android:entryValues="@array/notifications_code"
            android:key="@string/settings_notifications_f_new_compare"
            android:summary="%s"
            android:title="Someone in following list create new compare" />
    </PreferenceCategory>

</PreferenceScreen>