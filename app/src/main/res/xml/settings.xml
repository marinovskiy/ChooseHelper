<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="Base">

        <MultiSelectListPreference
            android:defaultValue="@array/categories_codes"
            android:entries="@array/categories"
            android:entryValues="@array/categories_codes"
            android:key="@string/settings_categories"
            android:summary="No categories selected"
            android:title="Categories in main tab" />

        <ListPreference
            android:defaultValue="5"
            android:dialogTitle="Choose number of compares"
            android:entries="@array/numbers_of_compares"
            android:entryValues="@array/numbers_of_compares"
            android:key="@string/settings_numbers_of_compares"
            android:summary="Show %s compares in all tab"
            android:title="Number of all compares" />
    </PreferenceCategory>

