<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSignInBtnText</item>
    </style>

    <style name="AppTheme.Button.GooglePlus" parent="AppTheme.Button">
        <item name="android:background">@drawable/google_plus_button</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Button.Vk" parent="AppTheme.Button">
        <item name="android:background">@drawable/vk_button</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Button.SignIn" parent="AppTheme.Button">
        <item name="android:background">@drawable/sign_in_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextView.Profile.Username" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
