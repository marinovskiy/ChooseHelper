<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_drawer_height"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_drawer_header_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_drawer_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_header_avatar"
            android:layout_width="@dimen/normal_avatar_size"
            android:layout_height="@dimen/normal_avatar_size"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/icon_no_avatar" />

        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_36"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTextNavHeader"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            tools:text="Alex Marinovskiy" />

        <TextView
            android:id="@+id/nav_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTextNavHeader"
            android:textSize="@dimen/medium_text_size"
            tools:text="alexander.marinovskiy@gmail.com" />

    </RelativeLayout>

</FrameLayout>