<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:contextClickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/preview_ll_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/preview_iv_avatar"
                android:layout_width="@dimen/small_avatar_size"
                android:layout_height="@dimen/small_avatar_size"
                android:src="@drawable/icon_no_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_8">

                <TextView
                    android:id="@+id/preview_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:textColor="@color/colorTextLink"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/preview_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="24"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="@dimen/medium_text_size" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/preview_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/preview_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_18"
        android:textColor="@android:color/black"
        android:textSize="@dimen/medium_text_size"
        tools:text="Where is better pizza?" />

    <LinearLayout
        android:id="@+id/preview_ll_variants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/preview_iv_first_image"
                android:layout_width="@dimen/up_small_image_size"
                android:layout_height="@dimen/up_small_image_size"
                android:padding="@dimen/padding_8"
                android:src="@drawable/standard_photo" />

            <TextView
                android:id="@+id/preview_tv_first_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingTop="@dimen/padding_4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_pre_normal" />

            <CheckBox
                android:id="@+id/preview_ch_like_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_4"
                android:button="@drawable/icon_like_black_selector"
                android:gravity="center"
                tools:paddingLeft="@dimen/padding_4"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/medium_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/preview_iv_second_image"
                android:layout_width="@dimen/up_small_image_size"
                android:layout_height="@dimen/up_small_image_size"
                android:padding="@dimen/padding_8"
                android:src="@drawable/standard_photo" />

            <TextView
                android:id="@+id/preview_tv_second_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/padding_2"
                android:gravity="center"
                android:paddingTop="@dimen/padding_4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_pre_normal" />

            <CheckBox
                android:id="@+id/preview_ch_like_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_4"
                android:button="@drawable/icon_like_black_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_4"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/medium_text_size" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/preview_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/medium_text_size"
        tools:text="Entertainment" />

</LinearLayout>