<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".screens.activities.ImageViewActivity">

    <ImageView
        android:id="@+id/view_image_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/standard_photo" />

    <CheckBox
        android:id="@+id/view_image_ch_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:button="@drawable/icon_like_white_selector"
        android:paddingLeft="@dimen/margin_6"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_pre_normal" />

</RelativeLayout>
