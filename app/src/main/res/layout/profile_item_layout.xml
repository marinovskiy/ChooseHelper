<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_foreground"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/profile_rv_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_people"
        android:drawablePadding="@dimen/drawable_padding_small"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/profile_rv_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_12"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/medium_text_size"
        tools:text="Followers" />

</LinearLayout>