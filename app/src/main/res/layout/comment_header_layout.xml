<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/details_tv_author"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_widthPercent="30%"
        tools:text="Alexander Marinovskiy" />

    <TextView
        android:id="@+id/details_tv_status_and_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Open\n17th May" />

    <TextView
        android:id="@+id/details_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_tv_author"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Where is better pizza?" />

    <LinearLayout
        android:id="@+id/ll_variants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_tv_question"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_iv_first_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="8dp"
                android:src="@drawable/test_img" />

            <TextView
                android:id="@+id/details_tv_first_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Chas poistu"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_iv_second_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="8dp"
                android:src="@drawable/test_img" />

            <TextView
                android:id="@+id/details_tv_second_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Felichita"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>