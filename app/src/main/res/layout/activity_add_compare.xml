<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    android:orientation="vertical"
    tools:context=".screens.activities.AddCompareActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_compare"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:elevation="@dimen/small"
        app:title="@string/label_new_compare"
        app:titleTextColor="@color/colorTextToolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/add_compare_container_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/toolbar_shadow_add_compare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal"
            android:background="@drawable/toolbar_shadow" />

    </FrameLayout>

</LinearLayout>
